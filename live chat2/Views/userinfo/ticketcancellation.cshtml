

@using live_chat2.Models;

<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
    <link href="~/Content/table.css" rel="stylesheet" />
    <link href="~/Content/userinfo.css" rel="stylesheet" />
</head>
<body>

    <div style="height:200px; background-color:aqua;">
        <h1>Personal Information</h1>
        <p style="color: white; font-size: 20px; word-spacing: 300px ">Name: Address: Email:</p>
        @foreach (var f in ViewBag.d)
        {
            <p style="font-size: 20px; word-spacing: 300px ">@f.Name @f.Address @f.Email</p>
        }
    </div>

    <div>
        <div style=" background-color:forestgreen;">
            <h1> DashBoard</h1>
        </div>

        <div style="width:25%; height: 300px; background-color: antiquewhite; float: left; margin-left: 15px ">
            <button class="button" onclick="location.href = '@Url.Action("updatepassword","userinfo")'"><span>Update Password </span></button>
            <button class="button" onclick="location.href = '@Url.Action("recentPurchase","userinfo")'"><span>Recent Purchase History </span></button>
            <button class="button" onclick="location.href = '@Url.Action("UserProfileUpdate","userinfo")'"><span>Update User Profile</span></button>
            <button class="button" onclick="location.href = '@Url.Action("ticketcancellation","userinfo")'"><span>Ticket Cancellation </span></button>

        </div>

        <div style="width:70%; height: 500px; background-color: darkseagreen; float: left; margin-left: 15px ">

            <div class="table-wrapper">
                <table class="fl-table">
                    <thead>
                        <tr>
                            <th>Header 1</th>
                            <th>Header 2</th>
                            <th>Header 3</th>
                            <th>Header 4</th>
                            <th>Cancel</th>
                            
                        </tr>
                    </thead>


                    <tbody>
                        <tr>
                            <td>Content 1</td>
                            <td>Content 1</td>
                            <td>Content 1</td>
                            <td>Content 1</td>
                            <td>
                                <button type="button" class="btn btn-danger badge-pill">Cancel</button>
                                </td>
                            
                        <tr>
                            <td>Content 2</td>
                            <td>Content 2</td>
                            <td>Content 2</td>
                            <td>Content 2</td>
                            <td>Content 2</td>
                        </tr>
                        
                       
                    <tbody>
                </table>
            </div>



        </div>



    </div>


</body>
</html>


